{% extends 'base.html.twig' %}

{% block title %}Healthy Education - Mes recettes!{% endblock %}
{% block body %}

    <div class="container mt-4">
        {% if not recipes.items is same as([]) %}
                <h1>Mes recettes</h1>

                <a href="{{path('recipe.new')}}"class="btn btn-primary">
                    Ajouter une recette
                </a>

                <div class="count mt-4">
                    <h4 style ="color: orange;">
                        Il y'a {{ recipes.getTotalItemCount }} 
                        recettes au total
                    </h4>
                </div>

                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">Numéro</th>
                        <th scope="col">Nom</th>
                        <th scope="col">Prix</th>
                        <th scope="col">Difficulté</th>
                       
                        <th scope="col">Edition</th>
                        <th scope="col">Suppression</th>
                    </tr>
                    </thead>
                    <tbody>
                        {% for  recipe in recipes  %}
                            <tr class="table-primary">
                                <th scope="row">{{recipe.id}}</th>
                                <td>{{recipe.name}}</td>
                                <td>{{recipe.price}} {{ (recipe.price is null) ? 'non renseigné' : recipe.price }}</td>
                                <td>{{recipe.difficulty}} {{ (recipe.difficulty is null) ? 'non renseigné' : recipe.difficulty }}</td>
                               
                                <td>
                                Todo
                                </td>
                                <td>
                                Todo
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <div class ="navigation d-flex justify-content-center">
                {{knp_pagination_render(recipes)}}
                </div>

            {% else %}
            <h1>Il n'y a pas de recettes</h1>
        {% endif %}
    </div>
{% endblock %}
